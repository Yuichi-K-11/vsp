<table class="message table">
  <thead>
    <tr>
      <th style="text-align: left; font-size: 15px;"><%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'50x50' %><span> </span><%= current_user.handle_name %></th>
      <th style="text-align: right; font-size: 15px;"><%= @user.handle_name %><span> </span><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'50x50' %></th>
    </tr>
  </thead>
  <% @chats.each do |chat| %>
    <% if chat.user_id == current_user.id %>
      <tbody>
        <tr>
          <th>
            <p style="text-align: left;"><%= chat.message %></p>
          </th>
          <th></th>
        </tr>
    </tbody>
    <% else %>
      <tbody>
        <tr>
          <th></th>
          <th>
            <p style="text-align: right;"><%= chat.message %></p>
          </th>
        </tr>
      </tbody>
    <% end %>
  <% end %>
</table>