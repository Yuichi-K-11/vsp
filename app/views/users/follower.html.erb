<div class="row">
  <div class="col-12 text-center">
    <i class="fas fa-user-friends fa-3x mt-4 mb-2"></i>
    <h2 class="text-center bg-gray">フォロワー</h2>
    <% if @users.present? %>
      <% @users.each do |user| %>
        <%= render 'users/user_list', user: user %>
      <% end %>
      <%= paginate @users %>
    <% else %>
      <div class="col-12 text-center">
        <i class="fas fa-exclamation fa-2x mt-4 text-center"></i>
        <p class="mt-2 text-center">会員はいません。</p>
      </div>
    <% end %>
    <%= link_to "マイページ", user_path(current_user), class: 'btn btn-outline-info mt-3' %>
  </div>
</div>